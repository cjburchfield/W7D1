<h3>new user form</h3>

<form action="<%= users_url %>" method="POST">
    <label for="username">Username:</label>
    <input
        type="text"
        name="user[username]"
        id="username"
        value="<%= @user.username %>"
    >

    <br>

    <label for="password">Password: </label>
    <input
        type="password"
        name="user[password]"
        id="password"
        value="<%= @user.password %>"
    >

    <br>

    <input type="submit" value="Submit">
</form>


